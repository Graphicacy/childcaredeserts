{
  "parser": "babel-eslint",
  "import/parser": "babel-eslint",
  "plugins": [
    "import",
    "react"
  ],
  "parserOptions": {
    "ecmaVersion": 6
  },
  "extends": [
    "plugin:react/recommended"
  ],
  "rules" : {
    "import/no-unresolved": 2,
    "import/no-commonjs": 2,
    "import/named": 2,
    "import/namespace": 2,
    "import/default": 2,
    "import/export": 2,
    "import/no-duplicates": 2,
    "import/imports-first": 2,
    "import/no-named-as-default": 2,
    "react/jsx-uses-react": 2,
    "react/jsx-indent": [2, 2],
    "react/no-find-dom-node": 0,
    "indent": [2, 2, {"VariableDeclarator": { "var": 2, "let": 2, "const": 3} , "SwitchCase": 1 }],
    "strict": 2,
    "no-fallthrough" : 0,
    "no-bitwise" : 0,
    "camelcase": [2, {"properties": "never"}],
    "eqeqeq" : 2,
    "no-unused-expressions" : 0,
    "wrap-iife" : 2,
    "no-undef" : 2,
    "new-cap": [2, {
      "capIsNewExceptions" : [ "ObjectId", "Router" ]
    }],
    "curly": [2, "multi-line"],
    "no-dupe-keys": 2,
    "no-caller" : 2,
    "no-console": 0,
    "no-unused-vars" : [2, {"ignore": ["React"]}],
    "block-scoped-var": 2,
    "dot-notation": 2,
    "dot-location": [2, "property"],
    "no-multi-str": 0,
    "key-spacing": 0,
    "max-depth": [2, 7],
    "max-len": [2, 120, 2, { "ignoreUrls": true, "ignoreComments": true }],
    "no-underscore-dangle" : 0,
    "no-multi-spaces" : 0,
    "vars-on-top": 2,
    "brace-style": 2,
    "comma-spacing" : 0,
    "space-infix-ops" : 0,
    "no-loop-func" : 0,
    "eol-last" : 0,
    "no-wrap-func" : 0,
    "no-shadow" : 2,
    "no-trailing-spaces" : 2,
    "semi-spacing" : 0,
    "semi": [2, "always"],
    "no-mixed-requires" : 0,
    "no-use-before-define" : 0,
    "consistent-return" : 0,
    "comma-dangle" : 0,
    "no-empty" : 0,
    "no-spaced-func" : 0,
    "no-extra-boolean-cast" : 0,
    "yoda" : 0,
    "no-path-concat" : 0,
    "no-new" : 0,
    "no-constant-condition" : 0,
    "no-alert" : 0,
    "handle-callback-err" : 0,
    "no-extend-native" : 0,
    "prefer-const": 2,
    "no-class-assign": 2,
    "no-const-assign": 2,
    "no-var": 2,
    "no-this-before-super": 2,
    "prefer-spread": 2,
    "constructor-super": 2,
    "prefer-arrow-callback": 2,
    "space-infix-ops": 2,
    "arrow-spacing": [2, { "before": true, "after": true }],
    "space-before-function-paren": [0, "never"],
    "no-mixed-spaces-and-tabs": 2,
    "keyword-spacing":  0,
    "quotes": [2, "single", { "avoidEscape": true, "allowTemplateLiterals": true }]
  },
  "env" : {
    "browser" : true,
    "node" : true,
    "es6": true
  },
  "globals": {
    "alert": false,
    "confirm": false,
    "it": true,
    "describe": true,
    "before": true,
    "after": true,
    "beforeEach": true,
    "afterEach": true,
    "element": true,
    "by": true,
    "browser": true,
    "expect": true,
    "protractor": true,
    "saveAs": true,
    "CKEDITOR": true
  },
  "ecmaFeatures" : {
    "jsx": true,
    "arrowFunctions" : true,
    "binaryLiterals" : true,
    "blockBindings" : true,
    "classes" : true,
    "defaultParams" : true,
    "destructuring" : true,
    "forOf" : true,
    "generators" : true,
    "modules" : true,
    "objectLiteralComputedProperties" : true,
    "objectLiteralDuplicateProperties" : true,
    "objectLiteralShorthandMethods" : true,
    "objectLiteralShorthandProperties" : true,
    "octalLiterals" : true,
    "regexUFlag" : true,
    "regexYFlag" : true,
    "restParams" : true,
    "spread" : true,
    "superInFunctions" : true,
    "templateStrings" : true
  }
}
